!cpu 6502
!to "build/DEMO/WAVY.NAVY#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $505d
         jsr   $800       ; decompress
         ldx   #5
-        lda   $100, x
         sta   $09E8, x
         sta   $1547, x
         dex
         bpl   -
         inx
         stx   $6B22
         stx   $084C

         lda   #$d0       ; disable alt-palette access
         sta   $AE8       ; otherwise UltraWarp dies

         +DISABLE_ACCEL

         jmp   $800

title    !byte x_e-x_b
x_b      !text "WAVY.NAVY"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
