!cpu 6502
!to "build/DEMO/AQUATRON#06BD00",plain
*=$BD00

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +READ_RAM2_WRITE_RAM2
         jsr   EnableAccelerator
         +LOAD_FILE_KEEP_DIR aquatron, $59C2, aquatron_dir_e-aquatron_dir_b
         +READ_ROM_NO_WRITE

         lda   #>(callback - 1)
         sta   $5FC3
         lda   #<(callback - 1)
         sta   $5FC6
         jmp   $59C2      ; decompress

callback
         ldx   #3-1
-        lda   patch,x
         sta   $7AE1,x
         sta   $7D1D,x    ; set exits
         dex
         bpl   -

         lda   #$D0
         sta   $7E11
         sta   $7E38
         sta   $7E43
         sta   $7EA0       ; disable sound

         +DISABLE_ACCEL

         jmp   $400

patch    !byte $4C,$00,$01

aquatron
         !byte aquatron_e-aquatron_b
aquatron_b
aquatron_dir_b
         !text "X"
aquatron_dir_e
         !text "/AQUATRON"
aquatron_e

!if * > $BEFF {
  !error "code is too large, ends at ", *
}
