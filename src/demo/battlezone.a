!cpu 6502
!to "res/DEMO/BATTLEZONE",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +READ_RAM2_WRITE_RAM2
         jsr   EnableAccelerator
         +LOAD_FILE_AT title, $00
         +READ_ROM_NO_WRITE

         lda   #$60
         sta   $201e
         jsr   $2000      ; decompress

         lda   #0
         sta   $0811
         lda   #1
         sta   $0816      ; reset vector patch

         lda   #$EA
         sta   $1632
         sta   $1632+1
         sta   $1632+2    ; disable clearing keyboard strobe

         lda   #$4C
         sta   $0872
         sta   $161A
         sta   $7661
         sta   $766C
         sta   $7693
         sta   $0B6A
         sta   $73A7
         sta   $168F+4
         lda   #0
         sta   $0872+1
         sta   $161A+1
         sta   $7661+1
         sta   $766C+1
         sta   $7693+1
         sta   $0B6A+1
         sta   $73A7+1
         sta   $168F+5
         lda   #1
         sta   $0872+2
         sta   $161A+2
         sta   $7661+2
         sta   $766C+2
         sta   $7693+2
         sta   $0B6A+2
         sta   $73A7+2
         sta   $168F+6
         lda   #$C9
         sta   $168F
         lda   #$FF
         sta   $168F+1
         lda   #$F0
         sta   $168F+2
         lda   #$16
         sta   $168F+3    ; set exits

         lda   #$D0
         sta   $7733
         sta   $774D
         sta   $78B8
         sta   $78BB
         sta   $7815
         sta   $5180
         sta   $5576
         sta   $0B8E      ; disable sound

         +DISABLE_ACCEL

         jmp   $810

title    !byte x_e-x_b
x_b      !text "X/BATTLEZONE/BATTLEZONE"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
