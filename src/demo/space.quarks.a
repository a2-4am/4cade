!cpu 6502
!to "build/DEMO/SPACE.QUARKS#06B000",plain
*=$B000

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$4C
         sta   $3EC9
         jsr   $3E65      ; decompress/set reset vector
         +RESET_AND_IRQ_VECTOR $100
         ldx   #3-1
-        lda   #$EA
         sta   $1C38,x
         sta   $0D6F,x
         lda   patch2,x
         sta   $1C3F,x
         sta   $0D76,x
         dex
         bpl   -
         ldx   #16
-        lda   patch, x
         sta   $72BD, x
         dex
         bpl   -

         +DISABLE_ACCEL

         jmp   $20A

title    !byte x_e-x_b
x_b      !text "SPACE.QUARKS"
x_e

patch    !byte $F0,$08,$AD,$00,$C0,$10,$0D
patch2   !byte $4C,$00,$01,$CE,$24,$02,$F0,$F8,$68,$68
