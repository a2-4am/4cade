!cpu 6502
!to "build/DEMO/SNEAKERS#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $84c7
         jsr   $3ffa      ; decompress
         ldx   #0
         stx   $54AB
         inx
         stx   $54AC
         stx   $9E2F      ; reset vector patch
         ldx   #8
-        lda   patch, x
         sta   $4068, x
         dex
         bpl   -

         +DISABLE_ACCEL

         jmp   $9e00

title    !byte x_e-x_b
x_b      !text "SNEAKERS"
x_e

patch    !byte $10,$03,$4C,$00,$01,$EA,$EA,$A9,$00

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
