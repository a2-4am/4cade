!cpu 6502
!to "build/DEMO/ALIEN.TYPHOON#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$61
         sta   $471C
         lda   #$7E
         sta   $4720
         lda   #$12
         sta   $4724
         lda   #$60
         sta   $472F
         jsr   $4710      ; decompress

         ldx   #0
         stx   $2067
         inx
         stx   $206C      ; reset vector patch

         lda   #$60
         sta   $2075
         jsr   $2001      ; unpack

         ldx   #3-1
-        lda   patch,x
         sta   $9D58,x
         sta   $8FD6,x
         sta   $8FEF,x
         sta   $92B1,x    ; set exits
         dex
         bpl   -

         +DISABLE_ACCEL

         jmp   $8F98

patch    !byte $4C,$00,$01

title    !byte x_e-x_b
x_b      !text "ALIEN.TYPHOON"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
