!cpu 6502
!to "res/DEMO/TB",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +GAME_REQUIRES_JOYSTICK
         +READ_RAM2_WRITE_RAM2
         jsr   EnableAccelerator
         +LOAD_FILE_AT title, $00
         lda   #$4C
         sta   $6BA8
         sta   $6C2D
         jsr   $4EC6      ; decompress
         jsr   $B2EC
         ldx   #3-1
-        lda   patch,x
         sta   $4F46,x
         sta   $AD44,x
         sta   $AD2A,x
         sta   $AB86,x
         sta   $AC64,x
         dex
         bpl   -
         inx
         stx   $B3F0
         stx   $B3F1
         stx   $B3F2    ; erase high score
         lda   #$10
         sta   $AD28
         sta   $AB84
         lda   #$15
         sta   $AD29
         lda   #$D0
         sta   $9580
         lda   #8
         sta   $AB85
         lda   #$2C
         sta   $4F3E
         +DISABLE_ACCEL
         jmp   $9000

patch    !byte $4C,$00,$01

title    !byte x_e-x_b
x_b      !text "X/TB/TB"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
