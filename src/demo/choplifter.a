!cpu 6502
!to "build/DEMO/CHOPLIFTER#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +GAME_REQUIRES_JOYSTICK
         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title
         lda   #$60
         sta   $403F
         jsr   $4000      ; decompress
         ldx   #3-1
-        lda   patch,x
         sta   $0DAB,x
         sta   $08EF,x
         dex
         bpl   -
         lda   #$18
         sta   $0DA9
         +DISABLE_ACCEL
         ldy   #0
         jmp   $400

patch    !byte $4C,$00,$01

title    !byte x_e-x_b
x_b      !text "CHOPLIFTER"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
