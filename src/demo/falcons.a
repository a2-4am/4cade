!cpu 6502
!to "build/DEMO/FALCONS#06B000",plain
*=$B000

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +LOAD_XSINGLE title

         lda   #$60
         sta   $3f0b
         jsr   $3eba      ; decompress

         lda   #$2C
         sta   $602A      ; skip input selection

         ldx   #3-1
-        lda   patch,x
         sta   $9FF7,x
         sta   $9FDC,x    ; set exits
         dex
         bpl   -

         jmp   $6000

patch    !byte $4C,$00,$01

title    !byte x_e-x_b
x_b      !text "FALCONS"
x_e

!if * > $BFFF {
  !error "code is too large, ends at ", *
}
