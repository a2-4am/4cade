!cpu 6502
!to "build/DEMO/BU#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $3ec9
         sta   $3f09
         jsr   $3e97      ; decompress

         +DISABLE_ACCEL

         ldx   #3-1
-        lda   patch2,x
         sta   $653F,x    ; skip joystick/keyboard selection
         dex
         bpl   -

         lda   #$b1
         sta   $646b
         jsr   $6400

         +ENABLE_ACCEL

         jsr   $811

         ldx   #3-1
-        lda   patch,x
         sta   $9FD3,x
         sta   $9FCF,x
         sta   $A497,x    ; set exits
         dex
         bpl   -

         inx
         stx   $A30A

         stx   $A15B
         stx   $A16A
         stx   $A17B
         stx   $A1D0      ; disable sound

         inx
         stx   $A30F      ; reset vector patch

         +DISABLE_ACCEL

         jmp   $a300

patch    !byte $4C,$00,$01
patch2   !byte $4C,$8D,$65

title    !byte x_e-x_b
x_b      !text "BU"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
