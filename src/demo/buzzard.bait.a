!cpu 6502
!to "build/DEMO/BUZZARD.BAIT#060300",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $0827
         jsr   $0800      ; decompress

         ldx   #3-1
-        lda   patch,x
         sta   $1067,x
         sta   $1B31,x
         sta   $7A6B,x
         sta   $80DD,x
         sta   $81FE,x    ; set exits
         dex
         bpl   -

         +DISABLE_ACCEL

         jmp   $8000

patch    !byte $4C,$00,$01

title    !byte x_e-x_b
x_b      !text "BUZZARD.BAIT"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
