!cpu 6502
!to "res/DEMO/ROBOTRON.2084",plain
*=$BF70

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +READ_RAM2_WRITE_RAM2
         jsr   EnableAccelerator

;+LOAD_FILE_KEEP_DIR
         ldx   #0         ; read to main memory
         stx   ldrhi
         stx   ldrlo
         +LDADDR title
         jsr   iLoadFileDirect

         lda   #<callback
         sta   $141D+1
         lda   #>callback
         sta   $141D+2
         jmp   $1400      ; decompress

callback +RESET_AND_IRQ_VECTOR $100

         ldx   #6-1
-        lda   patch1, x
         sta   $4542, x
         dex
         bpl   -          ; exit on keypress

         ldx   #3-1
-        lda   patch2, x
         sta   $453A, x
         dex
         bpl   -          ; exit at end of demo cycle

         lda   #$D0
         sta   $053B      ; disable sound

         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE

         jmp   $4015

patch1   !byte $AD,$88,$C0,$6C,$FC,$FF

patch2   !byte $4C,$42,$45

title    !byte x_e-x_b
x_b      !text "X/ROBOTRON.2084/ROBOTRON.2084"
x_e

!if * > $BFFF {
  !error "code is too large, ends at ", *
}
