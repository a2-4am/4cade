!cpu 6502
!to "build/DEMO/ALIEN.MUNCHIES#060200",plain
*=$200

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $1638
         jsr   $1610      ; decompress

         ldx   #10-1
-        lda   patch1, x
         sta   $0F67, x
         dex
         bpl   -          ; exit on button or keypress during demo

         ldx   #2-1
-        lda   patch2, x
         sta   $092D, x
         sta   $139D, x
         dex
         bpl   -          ; exit on keypress at title screen & during demo

         ldx   #3-1
-        lda   patch3, x
         sta   $92F, x
         sta   $139F, x
         sta   $1392, x
         sta   $0B50, x
         sta   $0B4B, x
         sta   $1153, x
         dex
         bpl   -          ; set exits

         lda   #$D0
         sta   $1161      ; disable sound

         +DISABLE_ACCEL

         jmp   $833

patch1   !byte $30,$05,$AD,$00,$C0,$10,$29
patch3   !byte $4C,$00,$01

patch2   !byte $10,$0A

title    !byte x_e-x_b
x_b      !text "ALIEN.MUNCHIES"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
