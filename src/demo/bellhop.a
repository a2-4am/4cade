!cpu 6502
!to "build/DEMO/BELLHOP",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title
         lda   #$60
         sta   $0813
         jsr   $0800      ; decompress
         ldx   #3-1
-        lda   patch,x
         sta   $602F,x
         sta   $6BD4,x
         sta   $66D2,x
         lda   patch2,x
         sta   $66CA,x
         dex
         bpl   -
         +DISABLE_ACCEL
         jmp   $6000

counter  !byte $FD

patch    !byte $4C,$00,$01
patch2   !byte $EE,<counter,>counter

title    !byte x_e-x_b
x_b      !text "BELLHOP"
x_e

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
