!cpu 6502
!to "res/DEMO/CYCLOD",plain
*=$300

         !source "src/constants.a"   ; no code in these
         !source "src/macros.a"

         +ENABLE_ACCEL_LC
         +LOAD_XSINGLE title

         lda   #$60
         sta   $202A
         jsr   $2000      ; decompress

         ldx   #6-1
-        lda   patch, x
         sta   $7381, x
         sta   $8B20, x
         dex
         bpl   -          ; exit on keypress

         ldx   #3-1
-        lda   patch2, x
         sta   $89EF,x    ; exit at end of demo cycle
         dex
         bpl   -

         lda   #$D0
         sta   $7CED      ; disable sound

         +DISABLE_ACCEL

         jmp   $8EA6

title    !byte x_e-x_b
x_b      !text "CYCLOD"
x_e

patch    !byte $10,$03
patch2   !byte $4C,$00,$01,$EA

!if * > $3F0 {
  !error "code is too large, ends at ", *
}
