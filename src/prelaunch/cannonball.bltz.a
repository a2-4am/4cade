!cpu 6502
!to "build/PRELAUNCH/CANNONBALL.BLTZ",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $1e61
         jsr   $1e30      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $7dbf      ; patch - don't increase lives
         sta   $9c01      ; patch - don't decrease lives
+
         +RESET_VECTOR $100
         lda   #$2C
         sta   $A0D2
         sta   $A0D5
         sta   $A0DA      ; reset fix

         +DISABLE_ACCEL
         jmp   $a000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
