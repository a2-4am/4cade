!cpu 6502
!to "build/PRELAUNCH.INDEXED/REPTON",plain
*=$106

    !source "src/macros.a"

         +READ_RAM2_NO_WRITE
         jsr   EnableAccelerator
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $883
         lda   #>callback
         sta   $884
+
         +READ_ROM_NO_WRITE
         lda   #$60
         sta   $86D
         jsr   $800       ; decompress
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   $BA03

callback
         lda   #$a5
         sta   $19D7      ; patch - don't decrease lives
         jmp   $868C

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
