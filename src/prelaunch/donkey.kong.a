!cpu 6502
!to "build/PRELAUNCH.INDEXED/DONKEY.KONG",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $3eab
         jsr   $3e36      ; decompress
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         pha
         and   #HAS_JOYSTICK
         bne   +
         inc   $7CB7      ; force keyboard
+
         pla
         and   #CHEATS_ENABLED
         beq   +
         lda   #$2c
         sta   $729b
         sta   $6fea
+
         lda   #0
         sta   $4112
         lda   #1
         sta   $4117      ; reset vector patch

         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   $4000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
