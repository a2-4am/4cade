!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPECTRE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #>(callback-1)
         sta   $5F08
         lda   #<(callback-1)
         sta   $5F0B
         jmp   $5E2B      ; decompress

callback
         jsr   $BD78
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $6A6B      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $6000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
