!cpu 6502
!to "build/PRELAUNCH.INDEXED/BUTCHERBOB.86",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         ldy   #0
-        lda   $100,y
         sta   $bef0,y
         iny
         bne   -
         lda   #<callback
         sta   $1425
         lda   #>callback
         sta   $1426
         jmp   $1400       ; decompress

!pseudopc $bef0+*-$100 {
callback
         +RESET_VECTOR $BEF0
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $40CC       ; patch - don't decrease lives
         sta   $4E00       ; patch - don't increase lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $4015
}

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
