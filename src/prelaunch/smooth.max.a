!cpu 6502
!to "build/PRELAUNCH.INDEXED/SMOOTH.MAX",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $408C
         jsr   $4000       ; decompress
         ldx   #$11
         stx   $b72        ; fix game bug
         dex
         stx   $b83        ; fix game bug
         stx   $7ab3       ; fix game bug
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $72DE       ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $7000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
