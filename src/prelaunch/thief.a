!cpu 6502
!to "build/PRELAUNCH.INDEXED/THIEF",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #$60
         sta   $4BA3
         jsr   $4B50      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $4873      ; patch - don't decrease lives
         sta   $6215      ; patch - don't increase lives
+
         +DISABLE_ACCEL_LC
         jmp   $4000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
