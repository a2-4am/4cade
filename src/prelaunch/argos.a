!cpu 6502
!to "build/PRELAUNCH.INDEXED/ARGOS",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $852
         jsr   $800       ; load "DOS"
         lda   #<callback
         sta   $B64F
         lda   #>callback
         sta   $B650
         +DISABLE_ACCEL
         jmp   $300

callback
         +ENABLE_ACCEL
         jsr   $B65A      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   ++
         lda   $B75A
         cmp   #'3'
         bne   +
         lda   #$ad
         sta   $67E5      ; patch - don't decrease lives
         bne   ++
+
         cmp   #'5'
         bne   ++
         lda   #$ad
         sta   $F97       ; patch - don't decrease energy
++
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         rts
