!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPINDIZZY",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL

         +READ_RAM1_WRITE_RAM1
         +LC_REBOOT
         +READ_ROM_NO_WRITE

         lda   #$60
         sta   $855
         jsr   $800       ; decompress

         ldx   #0
         stx   $9344
         inx
         stx   $934F      ; fix reboot

         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$2C       ; BIT
         sta   $999A
         sta   $99AF      ; kill timer
+
         jsr   DisableAccelerator
         jsr   HideLaunchArtworkLC2
         +READ_ROM_NO_WRITE
         sta   $C05F      ; fix //c and //c+ HGR color
         jmp   $9300

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
