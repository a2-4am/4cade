!cpu 6502
!to "build/PRELAUNCH.INDEXED/TS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $206F
         lda   #>callback
         sta   $2070
         jmp   $2000      ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $7301      ; patch - don't increase lives
         sta   $7322      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $4071

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
