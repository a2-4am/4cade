!cpu 6502
!to "build/PRELAUNCH.INDEXED/MINER.II",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>callback
         sta   $2080
         lda   #<callback
         sta   $207F
         jmp   $2000      ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$bd
         sta   $938       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $8D9

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
