!cpu 6502
!to "build/PRELAUNCH/ZAXXON",plain
*=$106

    !source "src/prelaunch/common.a"

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         sta   cheat+1
         lda   #<cheat
         sta   $208c
         lda   #>cheat
         sta   $208d
         jmp   $2000

cheat
         ldy   #0         ; SMC
         beq   +
         ldy   #$bd
         sty   $1a40
         sty   $1a61
+
         jmp   $200

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
