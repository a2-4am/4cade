!cpu 6502
!to "build/PRELAUNCH.INDEXED/ALCAZAR",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $403F
         jsr   $1ffd      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $8289      ; patch - don't decrease lives
+
         lda   #$4C
         sta   $9DBF
         lda   #0
         sta   $9DC0
         lda   #1
         sta   $9DC1      ; reset vector patch

         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $7c1e

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
