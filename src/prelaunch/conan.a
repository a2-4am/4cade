!cpu 6502
!to "build/PRELAUNCH.INDEXED/CONAN",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $81e
         jsr   $800
         lda   #$60
         sta   $bd40
         jsr   $bc94

         lda   #0        ; vector fixes
         sta   $7C09     ; to $3FE - IRQ
         lda   #1
         sta   $7C01     ; to $3F3 - reset
         sta   $7C0B     ; to $3FF - IRQ
         lda   #$A4
         sta   $7C02     ; to $3F4 - reset ($3F2 doesn't change)

         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jsr   $5ff8     ; decompress, run intro

         +ENABLE_ACCEL
         lda   #$6c
         sta   $bd40
         lda   #$60
         sta   $6ba2
         jsr   $3ffc
         jsr   $be00
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $19f5
         sta   $1a00
         sta   $1b4e
         ;;sta $a973
+
         +DISABLE_ACCEL
         jmp   $6ba5

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
