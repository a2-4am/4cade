!cpu 6502
!to "build/PRELAUNCH.INDEXED/ROBOT.BATTLE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $82F
         jsr   $800       ; decompress
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$bd
         sta   $7930      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         jsr   HideLaunchArtworkLC2
         +READ_ROM_NO_WRITE
         jmp   $6000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
