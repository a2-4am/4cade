!cpu 6502
!to "build/PRELAUNCH/MS.PACMAN",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $816
         jsr   $800       ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #<cheat
         sta   $2007
         lda   #>cheat
         sta   $2008
+
         lda   #0
         sta   $202A
         lda   #1
         sta   $202F      ; reset vector patch

         +DISABLE_ACCEL
         jmp   $2000

cheat
         jsr   $38cf
         lda   #$2c
         sta   $87e0
         sta   $97d2
         rts

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
