!cpu 6502
!to "build/PRELAUNCH.INDEXED/STAR.BLAZER",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $722A
         sta   $725D
         jsr   $4A58      ; decompress
         +DISABLE_ACCEL
         jsr   $4400
         +ENABLE_ACCEL
         jsr   $B4C6      ; decompress

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$EB
         sta   $FA0       ; patch - don't decrease lives or fuel
+
         +DISABLE_ACCEL
         jmp   ($20)

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
