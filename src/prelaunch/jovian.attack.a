!cpu 6502
!to "build/PRELAUNCH.INDEXED/JOVIAN.ATTACK",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $404D
         lda   #>callback
         sta   $404E
         jmp   $4000       ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $11D2       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $46E

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
