!cpu 6502
!to "build/PRELAUNCH.INDEXED/GAMMA.GOBLINS",plain
*=$106

         !source "src/prelaunch/common.a"

         +USES_TEXT_PAGE_2
         +ENABLE_ACCEL
         lda   #$60
         sta   $2034
         jsr   $2000      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $06FE
         lda   #$AD
         sta   $4EF3      ; patch - don't decrease lives
         lda   #$00
         sta   $7F62      ; patch - don't increase lives
+
         +RESET_VECTOR $100
         +DISABLE_ACCEL
         lda   #$00
         tay
         jmp   $2035

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
