!cpu 6502
!to "build/PRELAUNCH.INDEXED/ARCHON.II",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #>(callback-1)
         sta   $5C4D
         lda   #<(callback-1)
         sta   $5C50
         jmp   $3FF8      ; decompress & show EA title

hookreset
         sta   $BD05
         jsr   $BC09
         ldx   #0
         lda   $8E3
         cmp   #$A9
         bne   +
         stx   $8E4
         inx
         stx   $8E9
         rts
+        cmp   #$89
         bne   +
         stx   $1C7B
         inx
         stx   $1C80
+        rts

callback
         lda   #$4C
         sta   $BC06
         lda   #<hookreset
         sta   $BC07
         lda   #>hookreset
         sta   $BC08
         +READ_RAM2_WRITE_RAM2
         +LC_REBOOT
         +DISABLE_ACCEL_LC
         jmp   $6000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
