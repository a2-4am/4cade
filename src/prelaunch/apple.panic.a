!cpu 6502
!to "build/PRELAUNCH.INDEXED/APPLE.PANIC",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$4C
         sta   $6EC5
         sta   $6EE7
         jsr   $3FF8      ; decompress
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jsr   $1000      ; title sequence
         +ENABLE_ACCEL
         jsr   $6ECB      ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $766C      ; patch - don't decrease lives
         sta   $764E      ; patch - don't increase lives
+
         +DISABLE_ACCEL_LC
         jmp   $4000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
