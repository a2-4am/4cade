!cpu 6502
!to "build/PRELAUNCH/SPY.HUNTER",plain
*=$106

         !source "src/prelaunch/common.a"

         lda   #<callback
         sta   $4013
         lda   #>callback
         sta   $4010
         jmp   $4000
callback nop
         ldy   #0
         sty   $0D8E
         iny
         sty   $0D93
         
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $739D      ; patch - don't decrease timer
+
         jmp   $0451

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
