!cpu 6502
!to "build/PRELAUNCH.INDEXED/MONSTER.MASH",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #$60
         sta   $A16
         jsr   $800       ; load DOS
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $BD07
         lda   #>callback
         sta   $BD08
+
         +DISABLE_ACCEL_LC

         jmp   $B700

callback
         pla
         pla
         jsr   $BD5A
         jsr   $BD09
         lda   $BEA3
         cmp   #5
         bne   +
         lda   $407
         cmp   #$21
         bne   +
         lda   $408
         bne   +
         lda   #$a5
         sta   $6625      ; patch - don't decrease lives
+
         clc
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
