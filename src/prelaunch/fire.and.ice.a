!cpu 6502
!to "build/PRELAUNCH.INDEXED/FIRE.AND.ICE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $27BD
         jsr   $2760      ; decompress
         sty   $1C03
         iny
         sty   $1C08
         ldy   #$A4
         sty   $1C0D      ; reset vector
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $17DF       ; patch - don't decrease fuel
         sta   $18E6       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $8E00

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
