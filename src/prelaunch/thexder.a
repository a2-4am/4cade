!cpu 6502
!to "build/PRELAUNCH.INDEXED/THEXDER",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $83F
         jsr   $800
         lda   $13A8
         cmp   #$4C
         bne   +
         lda   #$60
         sta   $13A8
         jsr   $1200
         +RESET_VECTOR reset
         lda   #<reset
         sta   $47FC
         lda   #>reset
         sta   $47FD      ; moved to LC $FFFC/D
         +DISABLE_ACCEL
         jmp   $1800

reset
         +READ_ROM_NO_WRITE
         jmp   $FAA6

+        inc   $3F4       ; force reboot
         +DISABLE_ACCEL
         jmp   $1200

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
