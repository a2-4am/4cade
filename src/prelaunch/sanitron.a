!cpu 6502
!to "build/PRELAUNCH.INDEXED/SANITRON",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $94A7
         jsr   $6000       ; decompress
         ldx   #0
         stx   $1381
         inx
         stx   $1386
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $8BC       ; patch - don't decrease lives
         sta   $F1E       ; patch - don't increase lives
         sta   $1740      ; patch - don't decrease shield
+
         +DISABLE_ACCEL_LC
         jmp   $1350

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
