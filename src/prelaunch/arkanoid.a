!cpu 6502
!to "build/PRELAUNCH/ARKANOID",plain
*=$106

    !source "src/prelaunch/common.a"

         lda   $FBBF
         cmp   #5         ; disable acceleration on //c+
         beq   +          ; because of coloring issues
         +ENABLE_ACCEL
+        lda   #$60
         sta   $97e
         jsr   $800

         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$b5
         sta   $145c
         sta   $1d65
+
         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         lda   $c083
         jsr   DisableAccelerator
+        lda   $c08b
         jsr   $ee1f

         +LC_REBOOT
         lda   #$2C
         sta   $600
         sta   $603       ; BIT changing reset

         jmp   $981

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
