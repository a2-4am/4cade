!cpu 6502
!to "build/PRELAUNCH/MR.COOL",plain
*=$106

        !source "src/prelaunch/common.a"

        +ENABLE_ACCEL
        lda   #$60
        sta   $83C
        jsr   $800       ; decompress

        +GET_MACHINE_STATUS
        and   #CHEATS_ENABLED
        beq   +
        lda   #$2C
        sta   $4C47      ; patch - don't decrease lives
        sta   $562F      ; patch - don't increase lives

+       +DISABLE_ACCEL
        jmp   $4000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
