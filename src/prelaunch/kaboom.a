!cpu 6502
!to "build/PRELAUNCH.INDEXED/KABOOM",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $82A
         jsr   $800       ; decompress
         lda   #$4C
         sta   $7AE1
         lda   #<callback
         sta   $7AE2
         lda   #>callback
         sta   $7AE3

         lda   #$2C       ; reset fix
         sta   $42FF
         sta   $4302

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$A9
         sta   $4107      ; don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $4000

callback
         sec
         sbc   #$F8
         cmp   #2
         bcc   +
         jmp   $7AEA
+        jmp   $7AE5

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
