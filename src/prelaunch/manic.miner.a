!cpu 6502
!to "build/PRELAUNCH.INDEXED/MANIC.MINER",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $83E
         jsr   $800       ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $87FE      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $6000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
