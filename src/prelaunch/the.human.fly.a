!cpu 6502
!to "build/PRELAUNCH.INDEXED/THE.HUMAN.FLY",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $8759
         sta   $8770
         jsr   $4B00       ; decompress
         lda   #(callback / 100) + 48
         sta   $87D
         lda   #((callback % 100) / 10) + 48
         sta   $87E
         lda   #(callback % 10) + 48
         sta   $87F
         lda   #0
         sta   $880
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   $D566

callback
         +ENABLE_ACCEL
         jsr   $875C       ; decompress more
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$2c
         sta   $4D24       ; patch - don't decrease lives
+
         +NEW_RESET_VECTOR $280
         +DISABLE_ACCEL_LC
         jmp   $1100

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
