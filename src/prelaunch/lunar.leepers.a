!cpu 6502
!to "build/PRELAUNCH.INDEXED/LUNAR.LEEPERS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #$60
         sta   $87D
         jsr   $800       ; decompress

         +RESET_VECTOR $100

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $33D
         lda   #>callback
         sta   $33E
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $6000

callback
         lda   #$A5
         sta   $E55       ; patch - don't decrease lives
         sta   $131A      ; patch - don't increase lives
         dec   $7DA4      ; patch - don't decrease fuel
         jmp   $800

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
