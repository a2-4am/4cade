!cpu 6502
!to "build/PRELAUNCH.INDEXED/WF",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #<callback
         sta   $212C
         lda   #>callback
         sta   $212D
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         ldy   #(cheat_e-cheat)-1
-        lda   cheat,y
         sta   $200,y
         dey
         bpl   -
         iny
         sty   $8276
         lda   #2
         sta   $8277
+
         jmp   $800       ; decompress

cheat !pseudopc $200 {
         jsr   $2000
         dec   $4F88      ; patch - don't decrease weapons
         lda   #$AD
         sta   $AAAC      ; patch - don't decrease lives
         rts
}
cheat_e

callback
         jsr   DisableAccelerator
         jmp   $2000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
