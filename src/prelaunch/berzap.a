!cpu 6502
!to "build/PRELAUNCH/BERZAP",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<callback1
         sta   $871
         lda   #>callback1
         sta   $872
         jmp   $800       ; decompress

callback1
         lda   #$4c
         sta   $b20b
         lda   #<callback2
         sta   $b20c
         lda   #>callback2
         sta   $b20d
         jmp   $b000

callback2
         lda   #0
         sta   $b20c
         lda   #2
         sta   $56        ; ldrhi
         sta   $b20d
         +READ_RAM2_WRITE_RAM2
         lda   $D401
         pha
         lda   $D403
         pha
         lda   #<berzap_mb
         ldy   #>berzap_mb
         jsr   $DAF5      ; ahem, LoadFileInternal+8
         pla
         sta   $D403
         pla
         sta   $D401
         jsr   DisableAccelerator
         jmp   $200

berzap_mb
         !byte 19
         !text "PRELAUNCH/BERZAP.MB"

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
