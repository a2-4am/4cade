!cpu 6502
!to "build/PRELAUNCH.INDEXED/JUMP.JET",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $7787
         lda   #>callback
         sta   $7788
         jmp   $3FF8      ; decompress

callback
         jsr   $BE00
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $131D      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE

         rts

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
