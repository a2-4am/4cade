!cpu 6502
!to "build/PRELAUNCH.INDEXED/JUMP.JET",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $7787
         lda   #>callback
         sta   $7788
         jmp   $3FF8      ; decompress

callback
         jsr   $BE00
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $131D      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
