!cpu 6502
!to "build/PRELAUNCH/BLACK.MAGIC",plain
*=$106

    !source "src/prelaunch/common.a"

         lda   $FBBF
         cmp   #5         ; disable acceleration on //c+
         beq   +          ; because of coloring issues
         +ENABLE_ACCEL
+        lda   #$60
         sta   $9C2
         jsr   $800       ; decompress

         lda   #$60
         sta   $1B2D
         sta   $D6E6

         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         jsr   DisableAccelerator
+        jsr   $1B00

         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         jsr   EnableAccelerator
+        jsr   $D000

         lda   #<callback
         sta   $8D5
         lda   #>callback
         sta   $8D6

         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         jsr   DisableAccelerator
+        jmp   $800

callback
         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         jsr   EnableAccelerator
+        jsr   $D003
         ldx   #5
-        lda   reset, x
         sta   $4182, x
         dex
         bpl   -
         lda   #$20
         sta   $D6EB

         +READ_ROM_NO_WRITE
         lda   $FBBF
         +READ_RAM1_WRITE_RAM1
         cmp   #5
         beq   +
         jmp   DisableAccelerator
+        rts

reset
         +READ_ROM_NO_WRITE
         jmp   $FAA6
         
!if * > $1C0 {
  !error "code is too large, ends at ", *
}
