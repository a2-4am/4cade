!cpu 6502
!to "build/PRELAUNCH.INDEXED/BLACK.MAGIC",plain
*=$106

    !source "src/macros.a"

                          ; acceleration has problems with Fastchip
                          ; let's remove it

         ldx   #5
-        lda   reset, x
         sta   $163, x
         dex
         bpl   -

         lda   #$60
         sta   $9C2
         jsr   $800       ; decompress
         jsr   HideLaunchArtworkLC2

         lda   #$60
         sta   $D6E6
         jsr   $1B00
         lda   #<callback
         sta   $8D5
         lda   #>callback
         sta   $8D6
         jmp   $800

callback
         lda   #$4C
         sta   $D6EB
         jsr   $D003
         ldx   #5
-        lda   $163, x
         sta   $4163, x
         dex
         bpl   -
         lda   #$20
         sta   $D6EB
         +READ_RAM2_WRITE_RAM2      ; fix on //c+
         jmp   $D6EE

reset
         +READ_ROM_NO_WRITE
         jmp   $FAA6

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
