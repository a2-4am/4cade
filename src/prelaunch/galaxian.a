!cpu 6502
!to "build/PRELAUNCH/GALAXIAN",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $5813
         jsr   $5800      ; decompress
         ldx   #0
         stx   $83F
         inx
         stx   $847       ; reset vector

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $16EA      ; patch - don't increase lives
         sta   $1751      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         jmp   $800

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
