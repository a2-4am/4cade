!cpu 6502
!to "build/PRELAUNCH.INDEXED/ES",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         +NEW_RESET_VECTOR $BFF0

         lda   #<callback
         sta   $603A
         lda   #>callback
         sta   $603B
         jmp   $52FA      ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   $1E5B
         cmp   #$31
         bne   +
         dec   $1E5B      ; patch - don't decrease time
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $D566

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
