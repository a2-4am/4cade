!cpu 6502
!to "build/PRELAUNCH.INDEXED/FLY.WARS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $8B28
         jsr   $55FD      ; decompress
         lda   #$60
         sta   $5A6
         jsr   $5A0       ; decompress more

         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $7C32      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         jsr   HideLaunchArtworkLC2
         +READ_ROM_NO_WRITE
         jmp   $5500

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
