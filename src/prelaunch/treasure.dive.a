!cpu 6502
!to "build/PRELAUNCH.INDEXED/TREASURE.DIVE",plain
*=$106

         !source "src/macros.a"

         jmp   +

*=$110
callback
         cmp   #$DD
         beq   callback_e
         jmp   $FDF0
callback_e

+        +ENABLE_ACCEL

         lda   #$60
         sta   $40A0
         jsr   $4000      ; decompress

         ldy   #5
-        lda   $100, y
         sta   callback_e, y
         dey
         bpl   -
         lda   #<callback_e
         sta   $3f2
         lda   #<callback
         sta   $BE5F
         lda   #1
         sta   $BE60

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         dec   $8521      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC

         jmp   $D566

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
