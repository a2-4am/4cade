!cpu 6502
!to "build/PRELAUNCH.INDEXED/GHOSTBUSTERS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $4075
         jsr   $4000      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $914
         lda   #>callback
         sta   $915
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $800

callback
         lda   #0
         sta   $9D31      ; patch - disable sprite collision
         jmp   $9600

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
