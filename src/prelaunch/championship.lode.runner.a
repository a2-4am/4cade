!cpu 6502
!to "build/PRELAUNCH.INDEXED/CL",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $1F74
         jsr   $1F00      ; decompress
         inc   $760F
         dec   $7618
         dec   $7621
         inc   $762A      ; swap buttons
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $7D, capped at 255
         lda   #$FF
         sta   $60DD      ; start with 255 lives
         lda   #$A5
         sta   $61AB      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $6000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
