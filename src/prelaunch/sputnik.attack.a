!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPUTNIK.ATTACK",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #$4C
         sta   $93D9
         jsr   $6900      ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$A5
         sta   $6B37      ; inf. lives
         sta   $6724      ; inf. shields
+
         lda   #<callback
         sta   $BD3E
         lda   #>callback
         sta   $BD3F
         +DISABLE_ACCEL_LC

-        lda   KBD
         bpl   -
         lda   CLEARKBD
         jmp   $8A60

callback
         lda   $BE4A
         ora   $BE4B
         beq   +
         jsr   $BF00
         !byte $CE
         !word $BE47
+
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
