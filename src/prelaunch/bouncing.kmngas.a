         sta   $52DB
         jsr   $527C      ; decompress 1
         +DISABLE_ACCEL
         jsr   $8d4
         +ENABLE_ACCEL
         lda   #$60
         sta   $BD40
         jsr   $BD20      ; decompress 2
         +GET_MACHINE_STATUS
