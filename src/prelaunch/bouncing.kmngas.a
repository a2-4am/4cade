         sta   $69DC      ; patch - don't decrease lives
         sta   $6C9A      ; patch - don't increase lives
         sta   $6C9D      ; patch - don't increase lives
+
         +DISABLE_ACCEL
         jmp   $7200

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
