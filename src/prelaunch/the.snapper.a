!cpu 6502
!to "build/PRELAUNCH.INDEXED/THE.SNAPPER",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $2049
         jsr   $2000      ; decompress
         ldx   #3
-        lda   keys, x
         sta   $4AFC, x
         dex
         bpl   -
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $8AA       ; patch - don't decrease lives
         sta   $1672      ; patch - don't increase lives
         dec   $920       ; patch - don't decrease time
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   ($20)

keys     !scrxor $80, "JLIK" ; left, right, up, down

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
