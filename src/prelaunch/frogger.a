!cpu 6502
!to "build/PRELAUNCH.INDEXED/FROGGER",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $3EFF
         lda   #>callback
         sta   $3F00
         jmp   $3ED9      ; decompress

callback
         jsr   $BF00
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $48B0      ; patch - don't decrease lives
         sta   $48CD      ; patch - don't erase sprite
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
