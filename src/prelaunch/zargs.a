!cpu 6502
!to "build/PRELAUNCH.INDEXED/ZARGS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>(callback-1)
         sta   $51BE
         lda   #<(callback-1)
         sta   $51C1
         jmp   $800       ; decompress

callback
         lda   #1
         sta   $60B0      ; reset vector fix
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         dec   $9FA7      ; don't decrease lives
+
         jsr   DisableAccelerator
         jsr   HideLaunchArtworkLC2
         +READ_ROM_NO_WRITE
         jmp   $6000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
