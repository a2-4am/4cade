!cpu 6502
!to "build/PRELAUNCH.INDEXED/ZARGS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>(callback-1)
         sta   $51BE
         lda   #<(callback-1)
         sta   $51C1
         jmp   $800       ; decompress

callback
         lda   #1
         sta   $60B0      ; reset vector fix
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         dec   $9FA7      ; don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $6000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
