!cpu 6502
!to "build/PRELAUNCH/PENTAPUS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $5412
         lda   #>callback
         sta   $5413
         jmp   $800       ; decompress

callback
         jsr   $200
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $685F      ; patch - don't increase lives
         sta   $8F2B      ; patch - don't decrease lives
+
         ldx   #0
         stx   $806
         inx
         stx   $807       ; reset back to TR

         +DISABLE_ACCEL
         jmp   $800

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
