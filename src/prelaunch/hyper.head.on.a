!cpu 6502
!to "build/PRELAUNCH.INDEXED/HYPER.HEAD.ON",plain
*=$106

    !source "src/macros.a"

         +USES_TEXT_PAGE_2
         +ENABLE_ACCEL
         lda   #$60
         sta   $6D32
         jsr   $6D00      ; decompress
         +HIDE_ARTWORK
         lda   #$60
         sta   $F2F
         jsr   $F01       ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $4B0       ; patch - don't decrease lives
         sta   $5FD       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         ldx   #$10
         jmp   $7d0       ; original is $7FD but GS accelerator overwrites it

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
