!cpu 6502
!to "build/PRELAUNCH.INDEXED/THE.GOONIES",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         +USES_TEXT_PAGE_2
         lda   #$60
         sta   $1045
         jsr   $1000      ; decompress
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $623
         lda   #>callback
         sta   $624
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         lda   #0
         jmp   $55C

callback
         lda   #$ad
         sta   $9F1       ; patch - don't decrease lives
         jmp   $800

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
