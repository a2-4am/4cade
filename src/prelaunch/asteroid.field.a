!cpu 6502
!to "build/PRELAUNCH.INDEXED/AF",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #$60
         sta   $5CDA
         jsr   $4000      ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $14E5      ; patch - don't decrease lives
+
         lda   #1
         sta   $12F2
         +RESET_VECTOR $100
         +DISABLE_ACCEL_LC
         jmp   $4000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
