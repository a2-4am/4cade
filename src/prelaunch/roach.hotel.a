!cpu 6502
!to "build/PRELAUNCH.INDEXED/ROACH.HOTEL",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback2
         sta   $5164
         ldx   #>callback2
         stx   $5165
         lda   #<pcallback2
         sta   $5034
         stx   $5035
         lda   #<pcallback1
         sta   $5154
         stx   $5155
         jmp   $800       ; decompress

callback1
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   ($202)

callback2
         +ENABLE_ACCEL
         jmp   $BDF4      ; decompress

callback3
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         dec   $CBC       ; patch - don't increase lives
         dec   $1029      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   ($200)

pcallback1
         !word callback1

pcallback2
         !word callback3

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
