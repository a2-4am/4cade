!cpu 6502
!to "build/PRELAUNCH.INDEXED/ROACH.HOTEL",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback2
         sta   $4DC8
         ldx   #>callback2
         stx   $4DC9
         lda   #<pcallback2
         sta   $4CE1
         stx   $4CE2
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jmp   $800       ; decompress while showing title

callback2
         +ENABLE_ACCEL
         jmp   $BC88      ; decompress

callback3
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         dec   $CBC       ; patch - don't increase lives
         dec   $1029      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   ($200)

pcallback2
         !word callback3

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
