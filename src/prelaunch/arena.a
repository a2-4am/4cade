!cpu 6502
!to "build/PRELAUNCH.INDEXED/ARENA",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$4C
         sta   $90D9
         jsr   $6000      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $1713      ; patch - don't decrease lives
         sta   $173B      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC

         jmp   $80D       ; skip changing the reset vector

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
