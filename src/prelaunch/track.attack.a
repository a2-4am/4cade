!cpu 6502
!to "build/PRELAUNCH.INDEXED/TRACK.ATTACK",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $9C9
         jsr   $800       ; load "DOS"
         lda   #<callback
         sta   $BF08
         lda   #>callback
         sta   $BF09
         jmp   $BF00      ; decompress

callback
         pha
         txa
         pha
         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         pla
         tax
         pla
         jsr   $400
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   $9FC
         cmp   #$C6
         bne   +
         lda   #$A5
         sta   $9FC
         sta   $10E4
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $800

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
