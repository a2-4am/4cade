!cpu 6502
!to "build/PRELAUNCH.INDEXED/LA",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $87C
         sta   $896
         jsr   $800       ; decompress
         +DISABLE_ACCEL_AND_HIDE_ARTWORK
         jsr   $300
