!cpu 6502
!to "build/PRELAUNCH.INDEXED/DM",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         lda   #<callback
         sta   $82B
         lda   #>callback
         sta   $82C
         lda   #$60
         sta   $A54
         jsr   $800       ; decompress
         lda   #$60
         sta   $614
         jsr   $600
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #0
         sta   $9207      ; don't decrease lives
+
         +DISABLE_ACCEL_LC
         +USES_TEXT_PAGE_2
         jmp   $802

callback
         +DISABLE_ACCEL
         lda   #$BA
         jsr   $8BBB
         +ENABLE_ACCEL
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
