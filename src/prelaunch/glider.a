!cpu 6502
!to "build/PRELAUNCH.INDEXED/GLIDER",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #>(callback-1)
         sta   $6EC4
         lda   #<(callback-1)
         sta   $6EC7
         jmp   $6EB3      ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $D2B       ; don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $4100

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
