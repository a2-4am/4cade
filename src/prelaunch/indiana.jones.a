!cpu 6502
!to "build/PRELAUNCH.INDEXED/INDIANA.JONES",plain
*=$106

    !source "src/prelaunch/common.a"

         lda   #$60
         sta   $20A2
         jsr   $2000
         lda   #<callback
         sta   $ACA
         lda   #>callback
         sta   $ACB
         inc   $3F4       ; force reboot
         jmp   $800

callback
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $640C      ; patch - don't decrease lives
+
         jmp   $F47

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
