!cpu 6502
!to "build/PRELAUNCH/JOUST",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $82f
         sta   $85e
         jsr   $800       ; decompress and show title/options screens
         +DISABLE_ACCEL
         jsr   $7000
         +ENABLE_ACCEL
         jsr   $832
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $2bc9
         sta   $2b6b
+
         lda   #$4C
         sta   $A3DC
         ldx   #0
         stx   $A3DD
         stx   $2C0E   
         inx
         stx   $A3DE      ; reset vector patch
         stx   $2C0F      ; quit handler patch
         +DISABLE_ACCEL
         jmp   $3e00

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
