!cpu 6502
!to "build/PRELAUNCH.INDEXED/DRAGONFIRE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $3621
         jsr   $3600      ; decompress
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         dec   $5401      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         jsr   HideLaunchArtworkLC2
         +READ_ROM_NO_WRITE
         jmp   $4000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
