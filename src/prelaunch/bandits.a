!cpu 6502
!to "build/PRELAUNCH.INDEXED/BANDITS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $87A
         jsr   $800       ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $481
         lda   #>callback
         sta   $482
+
         +DISABLE_ACCEL
         jmp   $8F40

callback
         +ENABLE_ACCEL
         jsr   $4C8       ; decompress
         lda   $57
         cmp   #$0F
         bne   +
         lda   $8FDF
         cmp   #5
         bne   +
         lda   #$AD
         sta   $63AE      ; patch - don't decrease lives
+
         +DISABLE_ACCEL
         lda   #0
         rts

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
