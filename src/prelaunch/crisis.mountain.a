!cpu 6502
!to "build/PRELAUNCH.INDEXED/CRISIS.MOUNTAIN",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$4c
         sta   $B75B
         lda   #0
         sta   $B75C
         lda   #1
         sta   $B75D      ; reset vector patch

         lda   #$60
         sta   $207b
         jsr   $2000      ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $c14       ; patch - don't increase lives
         sta   $1af0      ; patch - don't decrease lives
         sta   $1b49      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $4000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
