!cpu 6502
!to "build/PRELAUNCH.INDEXED/IE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         inc   $3F4       ; force reboot
         lda   #$60
         sta   $9E6
         jsr   $800       ; load DOS
         lda   #$4C
         sta   $347
         lda   #<callback1
         sta   $348
         lda   #>callback1
         sta   $349
         jmp   $9600

callback1
         lda   #<callback2
         sta   $348
         jmp   ($55)

callback2
         lda   #$6C
         sta   $347
         lda   #$55
         sta   $348
         lda   #0
         sta   $349
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $78DD      ; patch - don't allow heal
         sta   $8580      ; patch - don't increase hits
+
         +DISABLE_ACCEL
         jmp   $347

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
