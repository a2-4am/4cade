!cpu 6502
!to "build/PRELAUNCH.INDEXED/SU",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $6030
         jsr   $6000      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $4A60      ; patch - don't decrease lives
         sta   $4EEE      ; patch - don't increase lives
         dec   $4B5B      ; patch - don't decrease time
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $1000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
