!cpu 6502
!to "build/PRELAUNCH/THE.LAST.NINJA",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         inc   $3F4       ; force reboot
         lda   #$60
         sta   $9F7
         jsr   $800       ; load DOS
         lda   #$60
         sta   $9B5A
         jsr   $9B05
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $A027      ; patch - don't decrease lives
+
         +READ_RAM2_NO_WRITE
         jsr   DisableAccelerator
         +READ_RAM1_WRITE_RAM1
         jmp   $9B5F

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
