!cpu 6502
!to "build/PRELAUNCH.INDEXED/STAR.DANCE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<hook
         sta   $1FB9+1
         lda   #>hook
         sta   $1FB9+2
         jmp   $1F71      ; decompress

hook     lda   #0
         sta   $7007
         lda   #1
         sta   $700C      ; reset vector fix

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $1272      ; patch - don't decrease time
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $7000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
