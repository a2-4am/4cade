!cpu 6502
!to "build/PRELAUNCH.INDEXED/STAR.DANCE",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<hook
         sta   $1FB9+1
         lda   #>hook
         sta   $1FB9+2
         jmp   $1F71      ; decompress

hook     lda   #0
         sta   $7007
         lda   #1
         sta   $700C      ; reset vector fix

         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $1272      ; patch - don't decrease time
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $7000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
