!cpu 6502
!to "build/PRELAUNCH.INDEXED/PEOPLE.PONG",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<callback
         sta   $206C
         lda   #>callback
         sta   $206D
         jmp   $2000       ; decompress

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $7A43       ; patch - don't decrease lives
         lda   #$20
         sta   $927B       ; patch - set initial lives
+
         +NEW_RESET_VECTOR callback
         +DISABLE_ACCEL_LC
         jmp   $9A8B

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
