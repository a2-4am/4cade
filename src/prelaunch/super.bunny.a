!cpu 6502
!to "build/PRELAUNCH.INDEXED/SUPER.BUNNY",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $A32
         jsr   $800       ; load DOS
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $BD26
         lda   #>callback
         sta   $BD27
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $B700

callback
         jsr   $BE07
         lda   $B7EC
         cmp   #$14
         bne   +
         lda   $B7ED
         cmp   #$06
         bne   +
         lda   #$AD
         sta   $BB01      ; patch - don't decrease lives
+        rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
