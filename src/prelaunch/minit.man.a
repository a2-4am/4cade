!cpu 6502
!to "build/PRELAUNCH/MINIT.MAN",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $9FD
         jsr   $800       ; load DOS

         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $B13D      ; patch - don't decrease lives
+
         ldx   #0
         stx   $9E31
         inx
         stx   $9E3C      ; reset vector patch

         +DISABLE_ACCEL
         jmp   $B700

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
