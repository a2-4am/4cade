!cpu 6502
!to "build/PRELAUNCH.INDEXED/CANYON.CLIMBER",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $8005
         jsr   $6858      ; decompress
         +READ_RAM2_WRITE_RAM2
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $35c2
+
         lda   #$82       ; READ_ROM_NO_WRITE
         sta   $101
         lda   #$A6
         sta   $104
         lda   #$FA
         sta   $105       ; update TR hook to reboot
         ldx   #0
         stx   $3256      ; sets reset at $455
         stx   $FFFC
         inx
         stx   $3261      ; which is copied from $3255
         stx   $FFFD      ; LC reset vector fix
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $3000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
