!cpu 6502
!to "build/PRELAUNCH.INDEXED/MAZY",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #$60
         sta   $813
         jsr   $800       ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$AD
         sta   $70FB      ; patch - don't decrease lives
         sta   $70B4      ; patch - don't decrease time
+
         lda   #$80
         sta   $71e7      ; fix joystick down
         +DISABLE_ACCEL_LC
         jmp   $7000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
