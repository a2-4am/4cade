!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPACE.QUARKS",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$4C
         sta   $3EC2
         jsr   $3E65      ; decompress/set reset vector

         +RESET_VECTOR $100

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $1177      ; patch - don't increase lives
         sta   $1196      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $203

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
