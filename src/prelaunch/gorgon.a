!cpu 6502
!to "build/PRELAUNCH/GORGON",plain
*=$106

         !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $8237
         jsr   $3FFD      ; decompress
         lda   #$60
         sta   $B845
         jsr   $B837
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $70
         lda   #$A5
         sta   $A5B0      ; patch - don't decrease lives
+
         lda   #1
         sta   $A8BC      ; reset vector patch
                          ; (doesn't persist past title?)

         +DISABLE_ACCEL
         jmp   $A720

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
