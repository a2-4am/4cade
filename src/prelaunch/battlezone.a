!cpu 6502
!to "build/PRELAUNCH.INDEXED/BATTLEZONE",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $201e
         jsr   $2000      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$b9
         sta   $7364      ; patch - don't decrease lives
         sta   $719c      ; patch - don't increase lives
         sta   $71ba      ; patch - don't increase lives
+
         lda   #0
         sta   $0811
         lda   #1
         sta   $0816      ; reset vector patch

         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $810

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
