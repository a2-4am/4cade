!cpu 6502
!to "build/PRELAUNCH/GENIUS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $9CD
         jsr   $800       ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         pha
         lda   #$60
         sta   $9462
         lda   #<callback1
         sta   $950E
         lda   #>callback1
         sta   $950F
         jsr   $9442
         pla
         beq   +
         dec   $1C40      ; patch - don't decrease lives
         dec   $1C74      ; patch - don't increase lives
+
         +LC_REBOOT
         +DISABLE_ACCEL
         inc   $9d        ; game relies on it
         jmp   $9600

callback1
         lda   #$4C
         sta   $D7D9
         lda   #<callback2
         sta   $D7DA
         lda   #>callback2
         sta   $D7DB
         jmp   $D7C5

callback2
         sec
         sbc   #7
         cmp   #2
         bcc   +
         jmp   $D7E7
+        jmp   $D7DD

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
