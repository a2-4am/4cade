!cpu 6502
!to "build/PRELAUNCH.INDEXED/PHANTOMS.FIVE",plain
*=$106

    !source "src/macros.a"

         +READ_RAM2_NO_WRITE
         jsr   HideLaunchArtworkLC2
         +NEW_RESET_VECTOR $340
         lda   MachineStatus
         +READ_ROM_NO_WRITE
         and   #CHEATS_ENABLED
         beq   +
         ldx   #cheat_e-cheat_b
-        lda   cheat_b, x
         sta   cheat, x
         dex
         bpl   -
         lda   #<cheat
         sta   $8C99
         lda   #>cheat
         sta   $8C9A
+        jmp   $26B2

cheat_b !pseudopc $346 {
cheat
         lda   #$a5
         sta   $1D03      ; patch - don't decrease lives
         jmp   $15B0
}
cheat_e

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
