!cpu 6502
!to "build/PRELAUNCH.INDEXED/PHANTOMS.FIVE",plain
*=$106

    !source "src/prelaunch/common.a"

         +NEW_RESET_VECTOR $340
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         ldx   #cheat_e-cheat_b
-        lda   cheat_b, x
         sta   cheat, x
         dex
         bpl   -
         lda   #<cheat
         sta   $8C99
         lda   #>cheat
         sta   $8C9A
+        jmp   $26B2

cheat_b !pseudopc $346 {
cheat
         lda   #$a5
         sta   $1D03      ; patch - don't decrease lives
         jmp   $15B0
}
cheat_e

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
