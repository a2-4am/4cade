!cpu 6502
!to "build/PRELAUNCH.INDEXED/VORTEX",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #<hook
         sta   $407E+1
         lda   #>hook
         sta   $407E+2
         jmp   $4000      ; decompress2

hook     +NEW_RESET_VECTOR $BFF0
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         dec   $EA8       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $D566

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
