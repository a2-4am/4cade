!cpu 6502
!to "build/PRELAUNCH/SPY.STRIKES.BAK",plain
*=$106

         !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $0849
         jsr   $0800      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
