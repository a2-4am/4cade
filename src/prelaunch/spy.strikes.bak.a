!cpu 6502
!to "build/PRELAUNCH.INDEXED/S2",plain
*=$106

         !source "src/macros.a"

         lda   #$60
         sta   $336
         jsr   $300
         +ENABLE_ACCEL
         lda   #$60
         sta   $0849
         jsr   $0800      ; decompress
         +READ_RAM2_NO_WRITE
         jsr   HideLaunchArtworkLC2
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $17
         lda   #$A5
         sta   $6AE7      ; patch - don't decrease lives
         sta   $87EE      ; patch - don't increase lives
+
         ldy   #2         ; sound / speech
         lda   MockingboardStuff
         beq   skipmb
         bmi   +
         iny              ; sound
+        and   #7
         ora   #$30
         sta   $8F33
         sty   $8FEC

skipmb
         php
         jsr   DisableAccelerator
         plp
         beq   +
         jsr   $8FB5      ; init MB
+
         +READ_ROM_NO_WRITE
         jmp   $6000

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
