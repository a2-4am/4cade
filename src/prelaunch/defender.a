!cpu 6502
!to "build/PRELAUNCH/DEFENDER",plain
*=$106

         !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $0813
         jsr   $0800      ; decompress
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
                          ; lives in $9E
         lda   #$A5
         sta   $7579      ; patch - don't decrease lives
         sta   $6567      ; patch - don't increase lives
+
         lda   #$EA
         sta   $4045
         sta   $4046      ; reset vector patch

         +DISABLE_ACCEL
         jmp   $4000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
