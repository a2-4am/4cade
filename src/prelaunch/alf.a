!cpu 6502
!to "build/PRELAUNCH.INDEXED/ALF",plain
*=$106

         !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #$60
         sta   $87F
         sta   $888
         sta   $892
         sta   $8A0
         jsr   $800       ; decompress
         jsr   HideLaunchArtwork
         +DISABLE_ACCEL
         jsr   $8AA5      ; show Box Office animation
;ran out of space
;;         +ENABLE_ACCEL
         jsr   $882       ; small decompress
;;         +DISABLE_ACCEL
         jsr   $7150      ; show ALF title
         +ENABLE_ACCEL
         jsr   $88B       ; decompress
         +DISABLE_ACCEL
         jsr   $4000      ; show scrolling text screen
         +ENABLE_ACCEL
         jsr   $895       ; decompress
         ldy   #$60
         sty   $3C7
         jsr   $3BD
         lda   #$4C
         sta   $3C7
         inc   $2B        ; seed RNG
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         dec   $16CA      ; cosmetic
         lda   #$a5
         sta   $17D8      ; patch - don't decrease food
         sta   $1B73      ; patch - don't decrease lives
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $800

!if * > HideLaunchArtwork {
  !error "code is too large, ends at ", *
}
