!cpu 6502
!to "build/PRELAUNCH.INDEXED/SPIDER.RAID",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK

         lda   #$60
         sta   $3F0E
         jsr   $3EB9      ; decompress

         lda   #1
         sta   $40D3      ; reset vector

         lda   #$60
         sta   $40F1
         jsr   $4000

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         dec   $976A      ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $4246

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
