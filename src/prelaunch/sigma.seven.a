!cpu 6502
!to "build/PRELAUNCH.INDEXED/SIGMA.SEVEN",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $2044
         jsr   $2000       ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$2C
         sta   $CA3        ; patch - don't decrease fuel
         lda   #$a5
         sta   $1044       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $9F3A

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
