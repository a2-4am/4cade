!cpu 6502
!to "build/PRELAUNCH/PAC.MAN",plain
*=$106

    !source "src/prelaunch/common.a"

         +USES_TEXT_PAGE_2
         +ENABLE_ACCEL
         lda   #$60
         sta   $813
         jsr   $800       ; decompress

         lda   #0
         sta   $103F
         lda   #1
         sta   $104A      ; reset vector patch

         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #$A5
         sta   $5C0E      ; patch - don't decrease lives
         sta   $4135      ; patch - don't increase lives
+
         +DISABLE_ACCEL
         jmp   $1000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
