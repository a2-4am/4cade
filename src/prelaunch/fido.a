!cpu 6502
!to "build/PRELAUNCH.INDEXED/FIDO",plain
*=$106

    !source "src/macros.a"

         lda   #$60
         sta   $84EF
         jsr   $3FF5      ; decompress
         +ENABLE_ACCEL
         lda   #>(callback - 1)
         sta   $8508
         lda   #<(callback - 1)
         sta   $850B
         lda   #$19
         jmp   $84F1

callback
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $B23       ; patch - don't decrease lives
+
         +DISABLE_ACCEL_LC
         jmp   $DD3

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
