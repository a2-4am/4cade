!cpu 6502
!to "build/PRELAUNCH.INDEXED/TIME.PILOT",plain
*=$106

    !source "src/prelaunch/common.a"

         +NEW_RESET_VECTOR $180
         lda   #$60
         sta   $47CD
         jsr   $472D      ; decompress
         +NEW_RESET_VECTOR $110
         +GET_MACHINE_STATUS
         and   #CHEATS_ENABLED
         beq   +
         dec   $A5E       ; patch - don't decrease lives
+
         jmp   $D566

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
