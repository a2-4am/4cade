!cpu 6502
!to "build/PRELAUNCH.INDEXED/MARBLE.MADNESS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #>(callback-1)
         sta   $4C76
         lda   #<(callback-1)
         sta   $4C79
         jmp   $4A53      ; decompress

reset
         +READ_ROM_NO_WRITE
         jmp   $FAA6

callback
         lda   #<reset
         sta   $8DCD
         lda   #>reset
         sta   $8DD5
         sta   $8DDD

         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         dec   $898F      ; patch - don't decrease time
+
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE

         jmp   $1000

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
