!cpu 6502
!to "build/PRELAUNCH.INDEXED/PANIC.BUTTON",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $852
         jsr   $800       ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $72AF      ; patch - don't decrease lives
+
         ldx   #0
         stx   $82DA
         inx
         stx   $82DB
         +DISABLE_ACCEL_LC

         jmp   $6A00

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
