!cpu 6502
!to "build/PRELAUNCH.INDEXED/EARLY.BIRD",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #<hook
         sta   $941D
         lda   #>hook
         sta   $941E
         jmp   $6D00      ; decompress

hook     lda   #0
         sta   $BB5
         lda   #1
         sta   $BBA       ; reset vector fix

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$ad
         sta   $65AD      ; patch - don't decrease lives
         sta   $6CFC      ; patch - don't increase lives
+
         +DISABLE_ACCEL_LC
         jmp   $BB0

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
