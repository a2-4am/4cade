!cpu 6502
!to "build/PRELAUNCH.INDEXED/QIX",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL_AND_HIDE_ARTWORK
         inc   $3F4       ; force reboot
         lda   #<callback1
         sta   $60CA
         lda   #>callback1
         sta   $60CB
         ldx   #callback_e-callback_b
-        lda   callback_b,x
         sta   callback1,x
         dex
         bpl   -
         jmp   $23AC

callback_b !pseudopc $340 {
callback1
         lda   MachineStatus
         and   #CHEATS_ENABLED
         php
         jsr   DisableAccelerator
         jsr   $100       ; decompress
         sta   $0
         lda   #8
         sta   $1
         plp
         beq   +
         lda   #>(callback2 - 1)
         pha
         lda   #<(callback2 - 1)
         pha
         jmp   $60D6
+
         jmp   $60D2

callback2
         lda   #$ad
         sta   $9B2F      ; patch - don't decrease lives
         jmp   $801
}
callback_e         

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
