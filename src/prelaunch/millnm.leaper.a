!cpu 6502
!to "build/PRELAUNCH.INDEXED/MILLNM.LEAPER",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL

         lda   #$60
         sta   $836
         jsr   $800       ; decompress

         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #0
         sta   $95F0      ; patch - don't increase lives
         sta   $9985      ; patch - don't decrease lives
         sta   $8549      ; patch - don't decrease time
+
         ldx   #1
         stx   $9006
         dex
         stx   $9001      ; reset fix
         
         +DISABLE_ACCEL_LC
         jmp   $9000

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
