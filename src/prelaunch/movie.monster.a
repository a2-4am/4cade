!cpu 6502
!to "build/PRELAUNCH.INDEXED/MM",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $9C7
         jsr   $800        ; find and load "DOS"
         +HIDE_ARTWORK
         iny
         sty   $B719
         jsr   $B700
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback
         sta   $BD07
         lda   #>callback
         sta   $BD08
+
         +DISABLE_ACCEL_LC
         jmp   $900

callback
         pla
         pla
         jsr   $BD44
         jsr   $BD09
         lda   $B790
         cmp   #$12
         bne   +
         lda   $B791
         cmp   #$0b
         bne   +
         lda   $BD13
         cmp   #$20
         bne   +
         lda   #$a5
         sta   $7CD6      ; patch - don't decrease endurance
+        clc
         rts

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
