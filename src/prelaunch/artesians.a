!cpu 6502
!to "build/PRELAUNCH.INDEXED/ARTESIANS",plain
*=$106

    !source "src/prelaunch/common.a"

         +ENABLE_ACCEL
         lda   #<hook
         sta   $87B+1
         lda   #>hook
         sta   $87B+2
         jmp   $800       ; decompress

callback1
         lda   #<callback2
         sta   $8E43
         lda   #>callback2
         sta   $8E44
         jmp   $8E00

callback2
         lda   #0
         sta   $A00       ; patch - don't decrease energy
         lda   #$B0
         sta   $1815      ; patch - don't decrease energy
         jmp   $8E8C

hook     +RESET_VECTOR $100
         +READ_RAM2_NO_WRITE
         lda   MachineStatus
         and   #CHEATS_ENABLED
         beq   +
         lda   #<callback1
         sta   $B31F
         lda   #>callback1
         sta   $B320
+
         lda   #0
         sta   $B7F0
         bit   $C057      ; enable hires
         jsr   DisableAccelerator
         +READ_ROM_NO_WRITE
         jmp   $B31B

!if * > $1C0 {
  !error "code is too large, ends at ", *
}
