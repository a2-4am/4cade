!cpu 6502
!to "build/PRELAUNCH.INDEXED/CONGO.BONGO",plain
*=$106

    !source "src/macros.a"

         +ENABLE_ACCEL
         lda   #$60
         sta   $188B
         jsr   $1800      ; decompress
         +GET_MACHINE_STATUS_LC
         and   #CHEATS_ENABLED
         beq   +
         lda   #$a5
         sta   $cf7       ; patch - don't increase lives
         sta   $1099      ; patch - don't decrease lives
+
         lda   #$30       ; reset vector fixes
         sta   $C02
         lda   #$03
         sta   $C0A
         +NEW_RESET_VECTOR $330

         +DISABLE_ACCEL_AND_HIDE_ARTWORK_LC
         jmp   $c00

!if * > PrelaunchMax {
  !error "code is too large, ends at ", *
}
