!cpu 6502
!to "build/FX.INDEXED/HALF.FIZZLE",plain
*=$6000

         !source "src/fx/fx.hgr.halfblock.fizzle.common.a"

         +BUILD_HALFBLOCK_FIZZLE_DATA

         +LDADDR Coordinates
         +ST16 coord
         jsr   iReadyToPaint
@loop2
         ldy   #0
         lda   (coord),y
         bmi   @exit
         tax
         iny
         lda   (coord),y
         tay
         txa
         jsr   HGRHalfBlockCopy
         lda   #$07
         jsr   iWaitForKeyWithTimeout
         bmi   @exit
         inc   coord
         bne   +
         inc   coord+1
+        inc   coord
         bne   +
         inc   coord+1
+        bne   @loop2
@exit    rts

         +HGR_HALF_BLOCK_COPY_ROUTINES
