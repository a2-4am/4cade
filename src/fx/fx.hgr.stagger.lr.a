!cpu 6502
!to "build/FX.INDEXED/STAGGER.LR",plain
*=$6000

row = $fd
col1 = $fe
col2 = $ff

         !source "src/fx/macros.a"

         lda   #$00
         sta   col1
         lda   #$27
         sta   col2
         jsr   iReadyToPaint
@outerloop
         lda   #$2E
         sta   row
@loop1   ldy   col1
         lda   row
         jsr   HGRHalfBlockCopy
         iny
         jsr   HGRStaggerCopy
         ldy   col2
         lda   row
         jsr   HGRHalfBlockCopy
         dey
         jsr   HGRStaggerCopy
         dec   row
         dec   row
         bpl   @loop1
         lda   #$40
         jsr   iWaitForKeyWithTimeout
         bmi   @exit
         inc   col1
         inc   col1
         dec   col2
         dec   col2
         bpl   @outerloop
@exit    rts

         +HGR_HALF_BLOCK_COPY_ROUTINES
