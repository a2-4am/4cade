!cpu 6502
!to "build/FX.INDEXED/DIAGONAL2",plain
*=$6000

row = $fd
col = $fe
counter = $ff

         !source "src/fx/macros.a"
         !source "src/constants.a"

         +SWITCH_TO_MASKS copymasks

         lda   #64        ; 40 + 24
         sta   counter

         lda   #$FF       ; -1
         sta   col
         jsr   iReadyToPaint
@colloop
         lda   #23
         sta   row
         ldy   col
         jsr   WaitForVBL
@rowloop
         tya
         bmi   +
         cpy   #40
         bcs   +
         lda   row
         jsr   HGRBlockCopy
+        iny
         bmi   +
         cpy   #40
         bcs   +
         lda   row
         jsr   HGRBlockCopyWithMask
+        dey
         dey
         dec   row
         bpl   @rowloop
         lda   #64
         jsr   iWaitForKeyWithTimeout
         bmi   @exit
         inc   col
         dec   counter
         bne   @colloop
@exit    jmp   UnwaitForVBL

copymasks
         !byte %11111111
         !byte %10111111
         !byte %10011111
         !byte %10001111
         !byte %10000111
         !byte %10000011
         !byte %10000001
         !byte %10000000

         +HGR_COPY_MASK_ROUTINES
         +HGR_BLOCK_COPY_ROUTINES
