!cpu 6502
!to "build/FX.INDEXED/BLOCK.FIZZLE",plain
*=$6000

         !source "src/fx/fx.hgr.block.fizzle.common.a"

         +BUILD_BLOCK_FIZZLE_DATA

         +LDADDR Coordinates
         +ST16 coord
@loop2
         ldy   #0
         lda   (coord),y
         bmi   @exit
         tax
         iny
         lda   (coord),y
         tay
         txa
         jsr   HGRBlockCopy
         lda   #$0C
         jsr   WaitForKeyWithTimeout
         bmi   @exit
         inc   coord
         bne   +
         inc   coord+1
+        inc   coord
         bne   +
         inc   coord+1
+        bne   @loop2
@exit    rts

         !source "src/wait.a"
         !source "src/fx/fx.hgr.common.a"
         +HGR_BLOCK_COPY_ROUTINES
